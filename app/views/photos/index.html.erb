<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
</head>
<body>
  <%= link_to "+ Photo", new_user_photo_path %>
  <%= link_to "Back to Users", users_path %>
  <h2>Photos</h2>

  <p><%= @photos.count %></p>

  <%- @photos.each do |photo| %>
  <hr>
  <p>Fichier : </p><%= image_tag photo.filename.thumb %>
  <p>Name : <%= link_to @u.fullname, user_path(@u) %></p>
  <p>Nom : <%= photo.name %></p>
  <%= link_to "Edit", edit_user_photo_path(@u,photo)%>
  <%= link_to "Delete", user_photo_path(@u,photo), method: :delete, data: { confirm: "You sure?" } %>
  <hr>
  <%- end %>

</body>
</html>
